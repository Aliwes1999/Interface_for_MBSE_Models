# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-generate-with-secrets.token_hex(32)

# Database Configuration
# For Render: Use the Internal Database URL from your PostgreSQL instance
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@host:port/database

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Optional: Custom System Prompt
# SYSTEM_PROMPT_PATH=/path/to/custom/prompt.txt
# SYSTEM_PROMPT=Your custom system prompt here

# Development Settings (for local development)
# FLASK_ENV=development
# DATABASE_URL=sqlite:///instance/db.db
